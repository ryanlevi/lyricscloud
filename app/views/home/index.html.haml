%nav.navbar.navbar-inverse.navbar-fixed-top{:role => "navigation"}
  / Brand and toggle get grouped for better mobile display
  .navbar-header
    %button.navbar-toggle{"data-target" => ".navbar-ex1-collapse", "data-toggle" => "collapse", :type => "button"}
      %span.sr-only Toggle navigation
      %span.icon-bar
      %span.icon-bar
      %span.icon-bar
    %a.navbar-brand{:href => "/"} LyricsCloud
  / Collect the nav links, forms, and other content for toggling
  .collapse.navbar-collapse.navbar-ex1-collapse
    %form.navbar-form.navbar-left{:action => "/home/index", :method => "put", :name => 'index'}
      .form-group
        %input.form-control{:placeholder => "Artist", :type => "text", :name => "artist", :value => params[:artist]}
      .form-group
        %input.form-control{:placeholder => "Title", :type => "text", :name => "title", :value => params[:title]}
      %button.btn.btn-primary{:type => "submit"} Search
:javascript
  var lyrics = #{raw @array.to_s.gsub('"','')};
  $(function() {
    $("#cloud").jQCloud(lyrics)
  });
:css
  body { background-color: #eee; }
%center
  -unless @array
    .jumbotron
      .container
        - unless (params[:artist] == nil and params[:title] == nil) or (params[:artist] == "" and params[:title] == "")
          %br
          %h3 Sorry, song not found. Check your spelling and search again.
        - else
          %br
          %h1 LyricsCloud
          %p Type your search above and press submit!
  -else
    #cloud{:style => "width:window.innerWidth; height:450px;"}
%nav.navbar.navbar-default.navbar-fixed-bottom{:role => "navigation"}
